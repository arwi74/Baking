<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/standard_margin"
    android:paddingRight="@dimen/standard_margin">

    <TextView
        android:id="@+id/widget_ingredient_quantity"
        android:layout_width="@dimen/widget_quantity_width"
        android:layout_height="wrap_content"
        android:textColor="@color/widget_text_color"/>

    <TextView
        android:id="@+id/widget_ingredient_measure"
        android:layout_width="@dimen/widget_measure_width"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/widget_ingredient_quantity"
        android:layout_toRightOf="@+id/widget_ingredient_quantity"
        android:textColor="@color/widget_text_color"/>

    <TextView
        android:id="@+id/widget_ingredient_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/widget_ingredient_measure"
        android:layout_toRightOf="@+id/widget_ingredient_measure"
        android:textColor="@color/widget_text_color"/>

</RelativeLayout>